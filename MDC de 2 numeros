#include<stdio.h>
void main(void){
    int number1 = 0, number2 = 0, mdc = 1, i = 0,j = 0,aux = 0, vet1[10] = {0}, vet2[10] = {0}, vetAux[10] = {0};

    printf("\n\t\tDigite o numero para calcular o MDC\n\n");
    scanf("%d",&number1);
    scanf("%d",&number2);
    printf("\n\n");
//Essa parte decompõe o primeiro numero.
    do{
        if(number1 % 2 == 0){
            number1 /= 2;
            vet1[i] = 2;
            i++;
        }else if(number1 % 3 == 0){
            number1 /=3;
            vet1[i]=3;
            i++;
        }else if(number1 % 5 == 0){
            number1 /=5;
            vet1[i]=5;
            i++;
        }else if(number1 % 7 == 0){
            number1 /=7;
            vet1[i]=7;
            i++;
        }
    }while(number1 != 1);
    
//Essa parte decompõe o segundo numero.

    i=0;
    do{

        if(number2 % 2 == 0){
            number2 /= 2;
            vet2[i] = 2;
            i++;
        }else if(number2 % 3 == 0){
            number2 /=3;
            vet2[i]=3;
            i++;
        }else if(number2 % 5 == 0){
            number2 /=5;
            vet2[i]=5;
            i++;
        }else if(number2 % 7 == 0){
            number2 /=7;
            vet2[i]=7;
            i++;
        }
    }while(number2 != 1);

//Essa parte vê quais numero da primeira decomposição são iguais o da segunda.

    for(i=0;i<10;i++){
        for(j=0;j<10;j++){
            if(vet1[i]==vet2[j]){
                vetAux[aux] = vet1[i];
                aux++;
                i++;
            }
        }
    }
    
//Essa parte multiplica os numeros que são iguais e descobre o mdc.

    for(i=0;i<10;i++){
        if(vetAux[i]!=0){
            mdc = mdc * vetAux[i];
        }

    }
    printf("%d\t",mdc);
}
